---
import "@fontsource-variable/crimson-pro";
import "@fontsource-variable/eb-garamond";
import "@fontsource-variable/inter";
import "@fontsource-variable/lora";
import "@fontsource-variable/merriweather";
import "@fontsource-variable/open-sans";
import "@fontsource-variable/playfair-display";
import "@fontsource-variable/raleway";
import "@fontsource-variable/roboto";
import "@fontsource-variable/source-sans-3";
import "../styles/global.css";
---

<!doctype html>
<html lang="en" class="font-pair-1">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <meta
      name="description"
      content="Saverio Tassinari â€“ Tech Lead and Software Engineer based in London, with over 10 years of experience building user-focused digital products in cross-functional teams."
    />
    <meta name="author" content="Saverio Tassinari" />
    <meta
      name="keywords"
      content="Saverio Tassinari, software engineer, tech lead, full-stack developer, London, web development, product engineering, cross-functional teams, Rust, React, Typescript, AWS"
    />

    <link
      rel="icon"
      media="(prefers-color-scheme:dark)"
      type="image/svg+xml"
      href="/favicon_light.svg"
    />
    <link
      rel="icon"
      media="(prefers-color-scheme:light)"
      type="image/svg+xml"
      href="/favicon_dark.svg"
    />
    <meta name="generator" content={Astro.generator} />

    <title>Saverio Tassinari - Tech Lead</title>
  </head>
  <body
    class="mx-auto max-w-3xl m-0 w-full h-full text-zinc-900 dark:text-amber-50 bg-amber-50 dark:bg-zinc-900"
  >
    <header class="flex justify-between items-center mx-auto p-4">
      <nav class="flex items-center gap-8">
        <ul class="flex space-x-4">
          <li>
            <a href="/" class="text-lg font-medium underline">Home</a>
          </li>
          <li>
            <a href="/cv" class="text-lg font-medium underline">CV</a>
          </li>
        </ul>
      </nav>

      <a href="mailto:hello@saverio.dev" class="text-lg font-medium underline"
        >hello@saverio.dev</a
      >
    </header>

    <!-- Font Pair Selector -->
    <div class="p-4 flex gap-4 items-center">
      <label for="font-selector" class="block text-lg font-medium"
        >Choose Font Pair:</label
      >
      <select id="font-selector" class="p-2 border rounded">
        <option value="font-pair-1">Playfair Display + Source Sans Pro</option>
        <option value="font-pair-2">Lora + Inter</option>
        <option value="font-pair-3">Merriweather + Open Sans</option>
        <option value="font-pair-4">Crimson Text + Raleway</option>
        <option value="font-pair-5">EB Garamond + Roboto</option>
      </select>
    </div>

    <main class="p-4 prose lg:prose-lg">
      <slot />
    </main>

    <script>
      const fontSelector = document.getElementById("font-selector");

      fontSelector &&
        fontSelector.addEventListener("change", (event) => {
          const selectedFontPair =
            (event.target as HTMLSelectElement)?.value || "";
          document.documentElement.className = selectedFontPair;
        });
    </script>
  </body>
</html>

<style>
  /* Define font pair classes as top-level classes */
  .font-pair-1 {
    --font-heading: "Playfair Display Variable", serif;
    --font-base: "Source Sans 3 Variable", sans-serif;
  }
  .font-pair-2 {
    --font-heading: "Lora Variable", serif;
    --font-base: "Inter Variable", sans-serif;
  }
  .font-pair-3 {
    --font-heading: "Merriweather Variable", serif;
    --font-base: "Open Sans Variable", sans-serif;
  }
  .font-pair-4 {
    --font-heading: "Crimson Pro Variable", serif;
    --font-base: "Raleway Variable", sans-serif;
  }
  .font-pair-5 {
    --font-heading: "EB Garamond Variable", serif;
    --font-base: "Roboto Variable", sans-serif;
  }

  /* Apply the CSS variables */
  html {
    font-family: var(--font-base);

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      font-family: var(--font-heading) !important;
    }
  }
</style>
