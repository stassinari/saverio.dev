---
import "@fontsource-variable/noto-serif";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <meta
      name="description"
      content="Saverio Tassinari. At work I'm a backend, front-end, and DevOps dev. At home I have too many passions to list here."
    />
    <meta name="author" content="Saverio Tassinari" />
    <meta
      name="keywords"
      content="Saverio Tassinari, Tech Lead, Software Engineer, Backend, Frontend, DevOps"
    />

    <link
      rel="icon"
      media="(prefers-color-scheme:dark)"
      type="image/svg+xml"
      href="/favicon_light.svg"
    />
    <link
      rel="icon"
      media="(prefers-color-scheme:light)"
      type="image/svg+xml"
      href="/favicon_dark.svg"
    />
    <meta name="generator" content={Astro.generator} />

    <title>Saverio Tassinari - Tech Lead</title>
  </head>
  <body
    class="mx-auto max-w-3xl m-0 w-full h-full text-zinc-900 dark:text-amber-50 bg-amber-50 dark:bg-zinc-900"
  >
    <header class="flex justify-between items-center mx-auto p-4">
      <nav class="flex items-center gap-8">
        <ul class="flex space-x-4">
          <li>
            <a href="/" class="text-lg font-medium underline">Home</a>
          </li>
          <li>
            <a href="/cv" class="text-lg font-medium underline">CV</a>
          </li>
        </ul>
      </nav>

      <a href="mailto:hello@saverio.dev" class="text-lg font-medium underline"
        >hello@saverio.dev</a
      >
    </header>
    <main class="p-4 prose-sm sm:prose lg:prose-lg">
      <slot />
    </main>
  </body>
</html>
